{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "roleDefinitions": {
      "description": "List of defined roles to be loaded on app start",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "shortName": {
            "description": "Short name for the role",
            "type": "string"
          },
          "displayName": {
            "description": "Human-readable representation of the role",
            "type": "string"
          },
          "scopes": {
            "description": "Scopes relevant to this role",
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["shortName", "displayName", "scopes"]
      },
      "default": [
        {
		      "shortName": "authuser",
		      "displayName": "Authenticated user",
		      "scopes": [
		        "clear:session",
		        "read:config",
		        "read:lang",
		        "write:me",
		        "disavow:auth"
		      ]
		    },
		    {
		      "shortName": "contentcreator",
		      "displayName": "Content creator",
		      "extends": "authduser",
		      "scopes": [
		        "read:schema",
		        "read:content",
		        "read:contentplugin",
		        "write:content",
		        "preview:adapt",
		        "publish:adapt",
		        "import:adapt",
		        "export:adapt",
		        "read:tags",
		        "write:tags",
		        "read:users"
		      ]
		    },
		    {
		      "shortName": "superuser",
		      "displayName": "Super user",
		      "scopes": ["*:*"]
		    }
      ]
    },
    "defaultRoles": {
      "type": "array",
      "description": "The roles which are applied by default to new users (expects role shortname)",
      "items": { "type": "string" },
      "default": ["authuser"]
    },
    "defaultRolesForAuthTypes": {
      "type": "object",
      "description": "Same as defaultRoles, but allows different roles to be specified for different auth types",
      "default": {}
    }
  }
}
