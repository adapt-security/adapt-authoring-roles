{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$anchor": "userroles",
  "description": "Adds role properties to a user",
  "$merge": {
    "type": "merge",
    "source": { "$ref": "user" },
    "with": {
      "properties": {
        "roles": {
          "description": "Roles assigned to this user",
          "type": "array",
          "items": {
            "type": "string",
            "isObjectId": true
          },
          "default": []
        }
      }
    }
  }
}
