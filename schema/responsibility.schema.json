{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "An Adapt course build instance",
  "type": "object",
  "properties": {
    "shortName": {
      "description": "Short name for the responsibility",
      "type": "string"
    },
    "displayName": {
      "description": "Human-readable representation of the responsibility",
      "type": "string"
    },
    "scopes": {
      "description": "Scopes relevant to this responsibility",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["shortName", "displayName", "scopes"]
}
